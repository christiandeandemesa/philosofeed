{
	"name": "mern-blog",
	"version": "1.0.0",
	"description": "MERN philosophy blog",
	"main": "server.js",
	"scripts": {
		"start": "node backend/server.js",
		"server": "nodemon backend/server.js",
		"client": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"format-frontend": "prettier --write \"frontend/src/**/*.{js,jsx}\"",
		"format-backend": "prettier --write \"backend/**/*.{js,jsx}\""
	},
	"keywords": [
		"MERN",
		"philosophy",
		"blog"
	],
	"author": "Christian Demesa",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"colors": "^1.4.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.2",
		"express": "^4.18.1",
		"express-async-handler": "^1.2.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.5.4",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"concurrently": "^7.3.0",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1"
	}
}
